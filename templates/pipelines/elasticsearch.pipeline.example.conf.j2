input {
  gelf {
    port => {{ logstash_gelf_port }}
    type => gelf
  }
}

filter {
}

output {
  elasticsearch {
    hosts => "{{ logstash_elasticsearch_addr }}:9200"
    user => "{{ logstash_elasticsearch_user }}"
    password => "{{ logstash_elasticsearch_password }}"
    manage_template => false
    index => "{{ logstash_elasticsearch_index }}"
  }
  stdout {
    codec => rubydebug
  }
}
